<h1><%= t('Listing Purchases') %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('Name') %></th>
      <th><%= t('Category') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.name %></td>
        <td><%= purchase.category[:name] %></td>
        <td><%= link_to t('Show'), purchase %></td>
        <td><%= link_to t('Edit'), edit_purchase_path(purchase) %></td>
        <td><%= link_to t('Destroy'), purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to t('New Purchase'), new_category_purchase_path %>
