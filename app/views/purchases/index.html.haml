%h1= t ".title"
%table.table.table-striped
  %thead
    %tr
      %th= t "name"
      %th= t "category"
      %th{:colspan => "3"}
  %tbody
    - @purchases.each do |purchase|
      %tr
        %td= purchase.name
        %td= purchase.category[:name]
        %td= link_to t("actions.show"), purchase
        %td= link_to t("actions.edit"), edit_purchase_path(purchase)
        %td= link_to t("actions.destroy"), purchase, method: :delete, data: { confirm: "actions.confirmation" }
%br/
= link_to t("purchases.new.title"), new_category_purchase_path
%br/
= link_to t(".categories"), categories_path
