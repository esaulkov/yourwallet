%h1= t ".title"
%table.table.table-striped
  %thead
    %tr
      %th= t "name"
      %th= t "balance"
      %th= t "owner"
      %th{:colspan => "3"}
  %tbody
    - @wallets.each do |wallet|
      %tr
        %td= wallet.name
        %td= number_to_currency wallet.balance
        %td= wallet.user.name
        %td= link_to t("actions.show"), wallet
        %td= link_to t("actions.edit"), edit_wallet_path(wallet)
        %td= link_to t("actions.destroy"), wallet, method: :delete, data: { confirm: "actions.confirmation" }
%br/
= link_to t("wallets.new.title"), new_wallet_path
