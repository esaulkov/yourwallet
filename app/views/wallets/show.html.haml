.col-xs-12.col-sm-12.col-md-8.col-md-offset-2
  .panel.panel-primary
    .panel-heading
      %h3= @wallet.name
    .panel-body
      %p
        %strong
          = t "owner"
          \:
        = @wallet.user.name
      %p
        %strong
          = t "balance"
          \:
        = number_to_currency @wallet.balance
      .row
        .col-md-12
          %table.table.table-striped
            %tbody
              %tr.total
                %td{:colspan => "3"}
                  = t ".transactions"
                  \:
              - @wallet.transactions.each do |transaction|
                %tr
                  %td= l transaction.date_time, format: :long
                  %td= transaction.purchase.name
                  %td= number_to_currency transaction.sum
      = link_to t("actions.edit"), edit_wallet_path(@wallet), class: "btn btn-warning"
      = link_to t("actions.back"), wallets_path, class: "btn btn-info"
