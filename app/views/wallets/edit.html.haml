%p#notice= notice
.col-xs-12.col-sm-12.col-md-8.col-md-offset-2
  .panel.panel-primary
    .panel-heading
      %h3= t('Editing Wallet')
    .panel-body
      .row
        = render partial: "form", locals: { wallet: @wallet }
        .col-sm-12
          = link_to t('Show'), @wallet, class: 'btn btn-success'
          = link_to t('Back'), wallets_path, class: 'btn btn-info'
