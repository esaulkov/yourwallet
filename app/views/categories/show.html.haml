.col-xs-12.col-sm-12.col-md-8.col-md-offset-2
  .panel.panel-primary
    .panel-heading
      %h3= @category.name
    .panel-body
      %p
        %strong
          = t "owner"
          \:
        = @category.user.name
      .row
        .col-md-12
          %table.table.table-striped
            %tbody
              %tr.total
                %td{:colspan => "4"}
                  = t ".transactions"
                  \:
              - @transactions.each do |transaction|
                %tr
                  %td= l transaction.date_time, :format => :long
                  %td= transaction.purchase.name
                  %td= transaction.wallet.name
                  %td= number_to_currency add_sign_to_value(transaction.sum, transaction.side)
        .col-sm-12
          = link_to t("actions.rename"), edit_category_path(@category), class: "btn btn-warning"
          = link_to t("actions.back"), categories_path, class: "btn btn-info"
