    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.date_time %></td>
        <td><%= transaction.purchase.name %></td>
        <td><%= transaction.wallet.name %></td>
        <td><%= @user.name %></td>
        <td><%= number_to_currency transaction.sum %></td>
        <td><%= link_to 'Show', transaction %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction), remote: true %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

