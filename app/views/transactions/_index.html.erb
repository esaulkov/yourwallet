    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= l transaction.date_time, :format => :long %></td>
        <td><%= transaction.purchase.name %></td>
        <td><%= transaction.wallet.name %></td>
        <td><%= @user.name %></td>
        <td><%= number_to_currency transaction.sum %></td>
        <td><%= link_to t('Edit'), edit_transaction_path(transaction), remote: true %></td>
        <td><%= link_to t('Destroy'), transaction, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%= render "pagination" if @transactions_count > @page_size %>

