<%= render partial: 'layouts/flash' %>
<div class="container">
  <h3>Listing Transactions</h3>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Time, date</th>
        <th>Name</th>
        <th>Wallet</th>
        <th>User</th>
        <th>Sum</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="transaction-index">
      <%= render "index" %>
    </tbody>
  </table>

  <%= link_to 'New Transaction', new_transaction_path, remote: true, class: 'btn btn-primary' %>
  <div class="new-transaction"></div>
</div>
<div id="transaction-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content"></div>
  </div>
</div>
 
